<h2>User info</h2>

<h2>New book</h2>
<%= form_with model: book do |f| %>
 <div class="field">
  <%= f.label :Title %><br>
  <%= f.text_field :title %>
 </div>
 <div class="field">
  <%= f.label :Opinion %><br>
  <%= f.text_area :body %>
 </div>
 <div class="submit">
   <%= f.submit 'Create Book', class:"btn btn-secondary bg-success" %>
 </div>
<% end %>