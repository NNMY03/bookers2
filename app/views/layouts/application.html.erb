<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <script src="https://kit.fontawesome.com/0c41007c71.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a href="/" class="navbar-brand">
            Bookers
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown" >
    <ul class="navbar-nav ml-auto navbar-right">
      
    <% if user_signed_in? %>
    
    <li>
      
    <%= link_to  user_path(current_user.id), class:"nav-link text-light" do %>
    <i class="fa-solid fa-house-chimney"></i>Home
    <% end %>
    </li>
    
      <li>
      <a class="nav-link text-light" href="/users">
        <i class="fa-solid fa-users"></i>
      Users
      </a>
      </li>
      
      <li>
      <a class="nav-link text-light" href="/books">
      <i class="fa-solid fa-book-open"></i>
      Books
      </a>
      </li>
      
      <li>
        <a class="nav-link text-light" rel="nofollow" data-method="delete" 
        href="/users/sign_out">
        <i class="fa-solid fa-right-from-bracket" aria-hidden="true"></i>
        Log out
        </a>
      </li>
      
    <% else %>
    
      <li>
      <a class="nav-link text-light" href="/">
        <i class="fa-solid fa-house-chimney"></i>
      Home
      </a>
      </li>
    
      <li>
      <a class="nav-link text-light" href="/about">
       <i class="fa-solid fa-link" aria-hidden="true"></i>
      About
      </a>
      </li>
    
      <li>
        <a class="nav-link text-light" href="/users/sign_up">
        <i class="fa-solid fa-user-plus"></i>
        Sign up
      </a>
      </li>
      
      <li>
        <a class="nav-link text-light" href="/users/sign_in">
        <i class="fa-solid fa-right-from-bracket"></i>
        Log in
        </a>
        </li>
      
    <% end %>
    
    </ul>
       </div>
     </div>
    </nav>
  </header>
  
  <div class="container">
    <div class="row"> 
  
    <%= yield %>
    
    </div>
  </div>
  
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
